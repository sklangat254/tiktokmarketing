                `,
                animation: 'animate-slideTop',
                position: 'pos-center',
                duration: 2500
            }
        ];

        let currentIndex = 0;
        const container = document.getElementById('container');

        function showScene() {
            // Clear previous scene
            container.innerHTML = '';

            const scene = scenes[currentIndex];
            const sceneDiv = document.createElement('div');
            sceneDiv.className = `scene ${scene.animation} ${scene.position}`;
            sceneDiv.innerHTML = scene.html;
            container.appendChild(sceneDiv);

            // Move to next scene
            currentIndex = (currentIndex + 1) % scenes.length;

            // Schedule next scene
            setTimeout(showScene, scene.duration);
        }

        // Start the show
        showScene();
    </script>
